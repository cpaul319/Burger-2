
<div id="heading">
<h1>Eat Da Burger!</h1>
</div>
  <div class="grid-container">
      
                {{!-- <div class="jumbotron"> --}}
<div class="row burger">
<h2>List of Burgers</h2>
				{{#each burgers}}
				{{#unless this.devoured}}
				<div class="card col-6 my-1">
					<div class="text-center my-auto">
						<div>
							<p>{{this.id}}. {{this.name}}</p>
							<p>Added On: {{this.date_created}}</p>
						</div>
					</div>
				</div>
				<div class="col-6 text-center">
					<form method="POST" action="/burgers/update?_method=PUT" class="button-size">
						<input type="hidden" type="text" name="burger_id" value={{this.id}}><br>
						{{!-- enter eater name here --}}
						<input class="my-1" type="text" name="eaten_by"  placeholder="Eaten by"><br>
						<button type="submit" class="btn btn-default">Devour it!</button>
					</form>
				</div>
				{{/unless}}
				{{/each}}
			</div>
		</div>
<div class="row devouredBurger">
<h2>Burgers that were eaten</h2>
 
		<div class="col-4 text-center" class="task">
			{{!-- post eaten burgers here --}}
			{{#each burgers}}
			{{#if this.devoured}}
			<input class="form-control" type="text" placeholder="{{this.id}}. {{this.name}}. Eaten by {{this.User.dataValues.user_name}}" readonly>
			{{!-- include name of eater --}}
			{{/if}}
			{{/each}}
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-12 text-center enter_section">
			<form action="/burgers/create" method="POST">
				{{!-- enter burger name here --}}
				<input type="text" class="form-control" name="name" value="" id="enter_text">
				<button type="submit" class="btn btn-danger" id="text-enter-button">Add a burger</button>
			</form>
		 
		</div>
	</div>
</form>
 </div>   


